{% extends 'baseBack.html.twig' %}

{% block categorieActive %} class="active" {% endblock %}

{% block content %}<br>
    <div class="product-sales-area mg-tb-30">
        <div class="container-fluid">
            <div class="row">
                <div class="sparkline12-list">
                    <div class="sparkline12-hd">
                        <div class="main-sparkline12-hd">
                            <h1>Modifier Categorie</h1>
                        </div>
                    </div>
                    <div class="sparkline12-graph">
                        <div class="basic-login-form-ad">
                            <div class="row">
                                <form id="form" action="{{ path('modifierCategorie', {'id': cat.idCategorie}) }}" method="post">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                            <label class="login2 pull-right pull-right-pro">Nom Categorie</label>
                                        </div>
                                        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                                            <input id="nom" name="nom" placeholder="Nom" required type="text" value="{{ cat.nom }}" class="form-control">
                                        </div>
                                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                            <label class="login2 pull-right pull-right-pro">Type</label>
                                        </div>
                                        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                                            <input id="type" type="text" name="type" required placeholder="Type" value="{{ cat.type }}"  class="form-control">
                                        </div>
                                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                            <label class="login2 pull-right pull-right-pro">Description</label>
                                        </div>
                                        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                                            <input id="des" type="text" name="description" required placeholder="Description" value="{{ cat.description }}" class="form-control">
                                        </div>
                                        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                                            <button onclick="btnClick()" class="btn btn-sm btn-primary login-submit-cs" >Modifier</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function btnClick() {
            var form = document.getElementById("form");
            var nom = document.getElementById("nom");
            var type = document.getElementById("type");
            var description = document.getElementById("des");

            if(nom.value != "" && type.value != "" && description.value != "") {
                form.submit();
            }
            else {
                alert("empty filed");
            }
        }
    </script>
{% endblock %}

