{% for event in events %}
    <div class="col-lg-4 col-md-6">
        <div class="item-single mb-30">

            <div class="image">
                <img src="{{ asset('img/conference.jpg')}} " alt="Demo Image">
            </div>
            <div class="content">
                <span class="location"><i class='bx bx-map'></i>{{ event.nom }}</span>
                <h3>
                    <a href="">{{ event.sujet }}</a>
                </h3>
                <p>
                    {{ event.description }}
                </p>
                <hr>
            </div>
        </div>
    </div>
{% endfor %}
