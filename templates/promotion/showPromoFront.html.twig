{% extends 'base.html.twig' %}
    {% block title %}
        Promotions
    {% endblock %}
{% block content %}
    <div class="page-title-area ptb-100">
        <div class="container">
            <div class="page-title-content">
                <h1>Promotions</h1>
                <ul>
                    <li class="item"><a href="index.html">Home</a></li>
                    <li class="item"><a href=""><i class='bx bx-chevrons-right'></i>Promotions</a></li>
                </ul>
            </div>
        </div>
        <div class="bg-image">
            <img src="{{ asset('img/promotion.jpg') }}" alt="Demo Image">
        </div>
    </div>
    <section id="top-destination" class="top-destination-section pt-100 pb-70 bg-light">
        <div class="container">
            <div class="section-title">
            </div>

            <div class="row">
                {% for p in promotions %}
                    <div class="col-lg-4 col-md-6">
                        <div class="item-single mb-30">
                            {% if p.prix == 10  %}
                                {% set class = 'img/pourcentage/10.png' %}
                            {% elseif p.prix == 20 %}
                                {% set class = 'img/pourcentage/20.png' %}
                            {% elseif p.prix == 30 %}
                                {% set class = 'img/pourcentage/30.png' %}
                            {% elseif p.prix == 40 %}
                                {% set class = 'img/pourcentage/40.png' %}
                            {% elseif p.prix == 50 %}
                                {% set class = 'img/pourcentage/50.png' %}
                            {% elseif p.prix == 60 %}
                                {% set class = 'img/pourcentage/60.png' %}
                            {% elseif p.prix == 70 %}
                                {% set class = 'img/pourcentage/70.png' %}
                            {% elseif p.prix == 80 %}
                                {% set class = 'img/pourcentage/80.png' %}
                            {% else %}
                                {% set class = 'img/pourcentage/80.png' %}
                            {% endif %}
                            <div class="image">
                                <img src=" {{ asset( class ) }} " alt="Demo Image">
                            </div>
                            <div class="content">
                                <span class="location"><i class='bx bx-smile'></i> objet : {{ p.objet }}</span>
                                <h3>
                                    <a href="destination-details.html">Type : {{ p.type }}</a>
                                </h3>
                                <div class="review">
                                    <i class='bx bx-smile'></i>
                                    <span>{{ p.nbParticipants }}</span>
                                    <span>Nombre de jour : {{ p.nbJour }}</span>
                                </div>
                                <p>
                                    cout H/J : {{ p.coutHj }}
                                </p>
                                <hr>
                                <ul class="list">
                                  <li><i class='bx bx-time'></i>End Date : {{ p.datePrevu |date("m/d/Y")  }}</li>

                                    <li>Solde : {{ (p.coutHj * p.nbJour )* (100-p.prix/100)  }}</li>

                                </ul>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

        </div>
    </section>
{% endblock %}
