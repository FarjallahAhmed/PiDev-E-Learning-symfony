{% extends 'baseBack.html.twig' %}
{% block content %}
    <style>

        #cont{
            padding-top: 60px;

        }

    </style>

    <div class="product-status mg-b-15" id="cont">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="product-status-wrap">
                        <h4>Event List</h4>
                        <div class="add-product">
                            <a href="{{  path('newActivite') }}">Add Activite</a>
                        </div>

                        <div class="asset-inner">

                            <table>
                                <tr>
                                    <th>ID</th>
                                    <th>Nom</th>
                                    <th>Responsable</th>
                                    <th>Periode</th>

                                    <th>Setting</th>
                                </tr>
                                {% for activite in activites  %}
                                    <tr>
                                        <td>{{ activite.idActivite }}</td>
                                        <td>{{ activite.nom }}</td>
                                        <td>{{ activite.responsable }}</td>
                                        <td>{{ activite.periode }}</td>
                                        <td>
                                            <a href="{{  path('editActivite', {id: activite.idActivite }) }}">
                                                <button data-toggle="tooltip" title="Edit" class="pd-setting-ed"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>
                                            </a>
                                            <a href="{{  path('deleteActivite', {id: activite.idActivite}) }}">
                                                <button data-toggle="tooltip" title="Trash" class="pd-setting-ed"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                                            </a>
                                        </td>
                                        <td></td>
                                    </tr>
                                {% endfor %}

                            </table>

                        </div>

                        <div class="custom-pagination">
                            <ul class="pagination">
                                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                                <li class="page-item"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#">Next</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}