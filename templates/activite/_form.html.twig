                        }}
                        <div style="color: red; size: 15px; font-family: bold;">
                            {{ form_errors(formActivite.responsable) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group-inner">
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                        {{ form_label(formActivite.periode,'periode',{
                            'label_attr': {'class': 'login2'}
                        })
                        }}
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                        {{ form_widget(formActivite.periode,{
                            'attr':{
