            <h3 style="color: #0a6aa1">Create Activite </h3>

            {{ form_start(formActivite,{'attr': {'novalidate': 'novalidate'}}) }}
            <div class="form-group-inner">
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                        {{ form_label(formActivite.nom,'nom Activite',{
                            'label_attr': {'class': 'login2'}
