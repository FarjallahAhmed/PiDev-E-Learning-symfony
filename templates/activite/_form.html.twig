                        }}
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                        {{ form_widget(formActivite.responsable,{
                            'attr' : { 'placeholder' : 'Ex: Ali ben ALI',
                                'class' : 'form-control'
                            }
