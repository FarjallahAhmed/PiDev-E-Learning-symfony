{% extends 'base.html.twig' %}
   
{% block title %} Reclamation {% endblock %}

{% block content %}
    <div class="page-title-area ptb-100">
        <div class="container">
            <div class="page-title-content">
                <h1>Reclamation</h1>
                <ul>
                    <li class="item"><a href="index.html">Home</a></li>
                    <li class="item"><a href=""><i class='bx bx-chevrons-right'></i>Reclamation</a></li>
                </ul>
            </div>
        </div>

    </div>
    <section id="top-destination" class="top-destination-section pt-100 pb-70 bg-light" >
        <div class="container" id="content">
            <div class="section-title">
            </div>

            <div class="row" id="content">

                    <div class="col-lg-4 col-md-6">
        <div class="item-single mb-30">
            <div class="content">
                <form id="form" action="{{ path('ajouterReclamation') }}" method="post">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                            <label class="login2 pull-right pull-right-pro">Obejt Reclamation</label>
                                        </div>
                                        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                                            <input id="obj" name="objet" placeholder="Objet" required type="text" class="form-control">
                                        </div>
                                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                            <label class="login2 pull-right pull-right-pro">Message</label>
                                        </div>
                                        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                                            <input id="msg" type="text" name="message" required placeholder="Message" class="form-control">
                                        </div>
                                        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                                            <button onclick="btnClick()" class="btn btn-sm btn-primary login-submit-cs" >Ajouter</button>
                                        </div>
                                    </div>
                                </form>
            </div>
        </div>

    </div>

    <script>
        function btnClick() {
            var form = document.getElementById("form");
            var objet = document.getElementById("obj");
            var msg = document.getElementById("msg");

            if(objet.value != "" && msg.value != "") {
                form.submit();
            }
            else {
                alert("empty filed");
            }
        }
    </script>


            </div>

                    
            

        </div>
    </section>
{% endblock %}

