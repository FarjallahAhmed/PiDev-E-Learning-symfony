


{% extends 'baseReclamation.html.twig' %}


{% block recalamationActive %} class="active" {% endblock %}

{% block content %}<br>
    <div class="product-sales-area mg-tb-30">
        <div class="container-fluid">
            <div class="row">
                <div class="sparkline12-list">
                    <div class="sparkline12-hd">
                        <div class="main-sparkline12-hd">
                            <h1>Modifier Reclamation</h1>
                        </div>
                    </div>
                    <div class="sparkline12-graph">
                        <div class="basic-login-form-ad">
                            <div class="row">
                                <form action="{{ path('modifierReclamation', {'id': rec.idReclamation}) }}" method="post">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                            <label class="login2 pull-right pull-right-pro">Objet Reclamation</label>
                                        </div>
                                        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                                            <input name="objet" placeholder="Objet" required value="{{ rec.objet }}" type="text" class="form-control">
                                        </div>
                                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                            <label class="login2 pull-right pull-right-pro">Message</label>
                                        </div>
                                        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                                            <input type="text" name="message" required value="{{ rec.idMessage.contenu }}" placeholder="Message" class="form-control">
                                        </div>
                                        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                                            <button onclick="btnClick()" class="btn btn-sm btn-primary login-submit-cs" >Modifier</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function btnClick() {
            var form = document.getElementById("form");
            var objet = document.getElementById("obj");
            var msg = document.getElementById("msg");

            if(objet.value != "" && msg.value != "") {
                form.submit();
            }
            else {
                alert("empty filed");
            }
        }
    </script>
{% endblock %}

