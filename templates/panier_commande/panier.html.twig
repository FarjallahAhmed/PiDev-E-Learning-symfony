{% extends 'baseU.html.twig' %}

{% block body %}
{{ block("header", "baseU.html.twig") }}
    <body>
    


    <div class="page-title-area ptb-100">
        <div class="container">
            <div class="page-title-content">
                <h1>Cart</h1>
                <ul>
                    <li class="item"><a href="{{ path('formationfront') }}">Home</a></li>
                    <li class="item"><a href="{{ path('panier_commande') }}"><i class='bx bx-chevrons-right'></i>Cart</a></li>
                </ul>
            </div>
        </div>
        <div class="bg-image">
            <img src="{{ asset('img/panier.png') }}" alt="Demo Image">
        </div>
    </div>


    <section id="cart" class="cart-section pt-100 pb-70">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="cart-table-container">
                        <table class="table table-cart">
                            <thead>
                            <tr>
                                <th class="product-col">Formation</th>
                                <th class="price-col">Type</th>
                                <th>prix</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for x in affichagepanier %}
                                <tr class="product-row">
                                    <td class="product-col">
                                        <figure class="product-image-container">
                                            <a href="#" class="product-image">
                                                <img src="{{ asset('/img/cart1.jpg')}}" alt="product">
                                            </a>
                                        </figure>
                                        <h3 class="product-title">
                                            <a href="#">{{ x.objet }}</a>
                                        </h3>
                                    </td>
                                    <td>{{ x.type }}</td>

                                    <td>{{ x.prix }}TND</td>
                                </tr>
                                <tr class="product-action-row">
                                    <td colspan="4" class="clearfix">
                                        <div class="float-left">
                                            <a href="#" class="btn-move">Move to Wishlist</a>
                                        </div>
                                        <div class="float-right">

                                            <a href="{{ path('supprimercommande',{id:x.id}) }}" class="btn-remove"><i class='bx bx-x'></i></a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                            <tfoot>
                            <tr>
                                <td colspan="4" class="clearfix">
                                    <div class="float-left">
                                        <a href="{{ path('formationfront') }}" class="btn btn-outline-secondary">Continue Shopping</a>
                                    </div>
                                    <div class="float-right">
                                        <a href="{{ path('viderpanier') }}" class="btn btn-outline-secondary btn-clear-cart">Clear Shopping Cart</a>
                                        <a href="{{ path('history') }}" class="btn btn-outline-secondary btn-update-cart">history Shopping Cart</a>
                                    </div>
                                </td>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="cart-summary">
                        <h3>Summary</h3>
                        <table class="table table-totals">
                            <tbody>
                            <tr>
                                <td>Subtotal</td>
                                {% if panier.prixTotal is not defined %}
                                    <td>0TND</td>
                                {% else %}
                                    <td>{{ panier.prixTotal}}TND</td>
                                {% endif %}
                            </tr>
                            <tr>
                                <td>Tax</td>
                                <td>0.00TND</td>
                            </tr>
                            </tbody>
                            <tfoot>
                            <tr>
                                <td>Order Total</td>
                                {% if panier.prixTotal is not defined %}
                                    <td>0TND</td>
                                {% else %}
                                    <td>{{ panier.prixTotal}}TND</td>
                                {% endif %}
                            </tr>
                            </tfoot>
                        </table>
                        <a href="{{ path('finaliser') }}">
                            <button id="checkout-button"  class="btn btn-block btn-sm btn-primary">Checkout</button>



                    </div>
                </div>
            </div>
        </div>
