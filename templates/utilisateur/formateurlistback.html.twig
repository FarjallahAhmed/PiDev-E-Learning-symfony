    <!-- Start Left menu area -->
    {{ block("leftbar", "baseBackU.html.twig") }}
    <!-- End Left menu area -->
    <!-- Start Welcome area -->
    <div class="all-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="logo-pro">
                        <a href="index.html"><img class="main-logo" src="img/logo/logo.png" alt="" /></a>
                    </div>
                </div>
            </div>
        </div>

         
        {{ block("header", "baseBackU.html.twig") }}

         {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
                 {% endfor %}
        <div class="contacts-area mg-b-15">
            <div class="container-fluid">
                <div class="row">
                     {% for formateur1 in formateur %}
                    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                        <div class="hpanel hblue contact-panel contact-panel-cs responsive-mg-b-30">
                            <div class="panel-body custom-panel-jw">
                                <div class="social-media-in">
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-pinterest"></i></a>
                                </div>
                                {% if (formateur1.image == null) %}
                                <center>
                                <img alt="logo" class="img-circle m-b" src="{{ asset('uploads/pictures/user.png') }}" width="200" height ="200">
                                </center>
                                {% endif %}
                                {% if (formateur1.image != null) %}
                                <center>
                                <img alt="logo" class="img-circle m-b" src="{{ asset('uploads/pictures/' ~ formateur1.image ) }}" width="200" height ="200">
                                </center>
                                {% endif %}
                                <center><h3><a href="">{{ formateur1.nom }}  {{ formateur1.prenom }}</a></h3></center>
                                <center><p class="all-pro-ad">{{ formateur1.specialite }}</p></center>
                                    {% if (formateur1.etat == 0) %}
                                <center>
                                <p style="color:red;">
                                    ACCOUNT IS NOT ACTIVATED
                                </p>
                                </center>
                                    {% endif %}

                                     {% if (formateur1.etat == 1) %}
                                <center>
                                <p style="color:green;">
                                     ACCOUNT IS ACTIVATED
                                </p>
                                </center>
                                    {% endif %}


                            </div>
                            <div class="panel-footer contact-footer">
                                <div class="professor-stds-int">
                                    <div class="professor-stds">
                                        <div class="contact-stat"><span>Likes: </span> <strong>0</strong></div>
                                    </div>
                                    <div class="professor-stds">
                                        <div class="contact-stat"><span>Comments: </span> <strong>0</strong></div>
                                    </div>
                                    <div class="professor-stds">
                                        <div class="contact-stat"><span>Views: </span> <strong>0</strong></div>
                                    </div>
                                </div>

                                
                            </div>
                            <br>

                             <div >
                                <div  class="student-dtl">
                                    
                                  
                                       <a class="btn btn-danger btn-rounded"  data-toggle="modal" data-target="#DangerModalalert"> Delete <i class="fas fa-edit"></i></a>
                                       <a class="btn btn-info" href="{{ asset('uploads/pictures/' ~ formateur1.justificatif) }}" > View  <i class="fas fa-edit"></i></a>
                                        {% if formateur1.etat == 0 %}
                                       <a class="btn btn-success" href ="{{ path('activerformateur',{'id': formateur1.id}) }}" > Activate <i class="fas fa-edit"></i></a>
                                        {% endif %}
                                        {% if formateur1.etat == 1 %}
                                       <a class="btn btn-warning" href ="{{ path('bloquerformateur',{'id': formateur1.id}) }}" > Block <i class="fas fa-edit"></i></a>
                                        {% endif %}
                                </div>

                                
                            </div>
                        </div>
                    </div>
                    
                     <div id="DangerModalalert" class="modal modal-edu-general FullColor-popup-DangerModal fade" role="dialog">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-close-area modal-close-df">
                                        <a class="close" data-dismiss="modal" href="#"><i class="fa fa-close"></i></a>
                                    </div>
                                    <div class="modal-body">
                                        <span class="educate-icon educate-danger modal-check-pro information-icon-pro"></span>
                                        <h2>Danger!</h2>
                                        <p>Are You Sure You Want To Delete This Formateur ?</p>
                                    </div>
                                    <div class="modal-footer danger-md">
                                        <a data-dismiss="modal" href="#">Cancel</a>
                                        <a href ="{{ path('formateurs_delete',{'id': formateur1.id}) }}">Process</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                     {% endfor %}
                </div>

                <div id="DangerModalalert" class="modal modal-edu-general FullColor-popup-DangerModal fade" role="dialog">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-close-area modal-close-df">
                                        <a class="close" data-dismiss="modal" href="#"><i class="fa fa-close"></i></a>
                                    </div>
                                    <div class="modal-body">
                                        <span class="educate-icon educate-danger modal-check-pro information-icon-pro"></span>
                                        <h2>Danger!</h2>
                                        <p>The Modal plugin is a dialog box/popup window that is displayed on top of the current page</p>
                                    </div>
                                    <div class="modal-footer danger-md">
                                        <a data-dismiss="modal" href="#">Cancel</a>
                                        <a href="#">Process</a>
                                    </div>
                                </div>
                            </div>
                        </div>
